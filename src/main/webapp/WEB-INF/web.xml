<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <servlet>
        <servlet-name>game</servlet-name>
        <servlet-class>com.utopia.GameServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>map</servlet-name>
        <servlet-class>com.utopia.MapServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>tile</servlet-name>
        <servlet-class>com.utopia.TileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>tile_image</servlet-name>
        <servlet-class>com.utopia.TileImageServlet</servlet-class>
    </servlet>    
    
    <servlet-mapping>
        <servlet-name>map</servlet-name>
        <url-pattern>/api/v0/map.json</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>tile</servlet-name>
        <url-pattern>/api/v0/tile.json</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>tile_image</servlet-name>
        <url-pattern>/api/v0/tile.png</url-pattern>
    </servlet-mapping>    
    
    <servlet-mapping>
        <servlet-name>game</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
